{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "target": "es2017",
    "module": "none",
    "watch": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "typeRoots": [
      "@types",
      "src/typings"
    ],
    "lib": [
      "es2015",
      "scripthost",
      "dom"
    ],
    "jsx": "react",
    "allowJs": true,
    "checkJs": true
  },
  "files": [
    "src/proxy-handler/index.ts",
    "src/proxy-script/index.ts",
    "src/icon-handler/index.ts"
  ],
  "include": [
    "src/typings"
  ],
  "exclude": [
    "src/ui",
    "webpack.config.js",
    "dist"
  ]
}