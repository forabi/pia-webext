{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "lib": [
      "es2015",
      "scripthost",
      "dom"
    ],
    "jsxFactory": "h",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "typeRoots": [
      "@types",
      "node_modules/web-ext-types"
    ]
  },
  "exclude": [
    "webpack.config.js",
    "dist"
  ]
}